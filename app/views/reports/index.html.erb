<div class="sky-background">
  <div class="container content-container grid group">

    <h1>Reports Index <%= link_to '+ Add a Report', new_report_path, class: "btn btn-success" %></h1>

    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Summary</th>
        <th>Link</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>


    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.title, report.link %></td>
        <td><%= report.summary %></td>
        <td><%= report.link %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

</section>

</div>
</div>
