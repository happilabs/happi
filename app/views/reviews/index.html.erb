<h1>Listing reviews</h1>

<table>
  <tr>
    <th>User</th>
    <th>Admin approved</th>
    <th>Make anonymous</th>
    <th>User recommended</th>
    <th>Rating</th>
    <th>Desc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.user_id %></td>
    <td><%= review.admin_approved %></td>
    <td><%= review.make_anonymous %></td>
    <td><%= review.user_recommended %></td>
    <td><%= review.rating %></td>
    <td><%= review.desc %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

