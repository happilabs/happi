<div class="innerbg">
  <div class="hero-unit">
    <div class="container">
          <div class="">
            <div >
                <% if notice.present? %>
                <p id="homepage_messages"><%= notice %></p>
                <% end %>

                <% if alert.present? %>
                <p id="homepage_messages"><%= alert %></p>
                <% end %>
              <hr class="half">
                <h1><span class="yellow">Professional Shopping for Scientists</span></h1>
                
              </hr>
              
                  <div id="home-box" class="gray-background group">

                    <h2 class="">
                    <span id="get-it">You focus on your science. We'll focus on shopping for your lab supplies & equipment.</span>
                    </h2>

                    <img src="happy_virtual_lab_managers.png" alt="data for lab managers and pi's" title="We are a community of happy scientists" class="tom-image-jobs margin-left" id="home-cloud-margin-right">
                    <h5 id="newsletter">Receive our e-newsletter</h5>
                      <h4 id="newsletter-text">for shopping and lab managing tips, and job opportunities</h4>
     
                  <!-- <li>Receive our newsletter</li> -->
                      <% @subscriber = Subscriber.new %>
                      <%= form_for(@subscriber) do |f| %>
                      <% if @subscriber.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h2>

                          <ul>
                          <% @subscriber.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <div class="field">

                        <%= f.text_field :first_name, placeholder: "Name" %>
                      </div>

                      <div class="field">
                        <%= f.text_field :email, placeholder: "Email" %>
                      </div>

                      <div class="actions">
                        <%= f.submit "Submit", :class => "btn btn-success" %>
                      </div>
                    <% end %>
                
                  </div>
            </div>
          </div>
    </div>
  </div>
</div>



